<aura:component description="AE_NewAccountsModal">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:handler event="c:AE_OpenCreatePopup" action="{!c.open}"/>
    <aura:attribute name="createPopupOpened" type="Boolean"/>
    <aura:if isTrue="{!v.createPopupOpened}">
        <div class="container">
            <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true"
                     aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open" style="width:100%; background-color: rgba( 0, 0, 0, 0.5);">
                <div class="slds-modal__container" >

                    <footer class="slds-modal__footer" >
                        <div style="position:absolute; left: 15px">
                            <lightning:button variant="success"
                                              label="New"
                                              title="New"
                                              onclick="{! c.closeModel }"/>
                        </div>

                        <lightning:button variant="neutral"
                                          label="Cancel"
                                          title="Cancel"
                                          onclick="{! c.closeModel }"/>
                        <lightning:button variant="brand"
                                          label="OK"
                                          title="OK"
                                          onclick="{!c.submitDetails}"/>
                    </footer>
                </div>
            </section>
        </div>
    </aura:if>
</aura:component>
